<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_yd"
    tools:context=".QWTouchAty">

    <ImageView
        android:id="@+id/iv_FrameAnimation_01"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/frame_anim"
        android:layout_width="351dp"
        android:layout_height="360dp" />

    <Button
        android:id="@+id/bt_start_anim"
        app:layout_constraintTop_toBottomOf="@+id/iv_FrameAnimation_01"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bt_stop_anim"
        android:text="开始动画"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bt_stop_anim"
        app:layout_constraintTop_toBottomOf="@+id/iv_FrameAnimation_01"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/bt_start_anim"
        android:text="停止动画"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>